{% extends 'layout.html.twig' %}

{% block body %}
    <div class="mt-3"><h1>Register</h1></div>

    {% for error in app.session.flashbag.get('register_error') %}
        <div class="alert alert-danger" role="alert">{{ error|trim('.') }}</div>
    {% endfor %}

    <form class="form-signin" action="{{ path('register') }}" method="post">
        <label for="input-email" class="sr-only">email</label>
        <input type="email" id="input-email" class="form-control" placeholder="email" name="email" value="{{ email }}" required autofocus>

        <label for="input-password" class="sr-only">password</label>
        <input type="password" id="input-password" class="form-control" placeholder="password" name="password" required>

        <label for="repeated-input-password" class="sr-only">repeated password</label>
        <input type="password" id="repeated-input-password" class="form-control" placeholder="repeated password" name="repeat_password" required>

        <button class="btn btn-lg btn-dark btn-block" type="submit">submit</button>
    </form>
{% endblock %}
